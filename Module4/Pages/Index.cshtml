@page
@model IndexModel
@{
    ViewData["Title"] = "Guthrie Theater";
}

<div class="container mt-5">

    <h1 class="text-center">🎭 Guthrie Theater 🎭</h1>

        <div class="card mt-4">

            <h5>Current Shows:</h5>
            <ul class="list-group">
                <!-- loop through the SampleShows array 
                and display each element of the array -->
                @for (int i = 0; i < Model.SampleShows.Length;) {
                    <li class="list-group-item">@Model.SampleShows[i]</li>


                } <!-- end for loop -->
            </ul>

        </div>

    @if (!Model.ShowResults)
    {
        // if the showResults variable is false, display the form
        // so the user can enter their input
        <div class = "card mt-4">
            <div class="card-body">
            <h5>Add Your Shows</h5>
                <form method="post">
                    <!-- Use a for loop to iterate through 
                    and create multiple textboxes with labels -->
                    @for (int = 0; i < 3; i++) {
                        <div class="mb-3">
                            <label class="form-label">Show #@(i+1):</label>
                            <input type="text" name="Shows[@i]" class="form-control" required />
                        </div>
                    }
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    }
    
</div>
